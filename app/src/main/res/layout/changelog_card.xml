<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/changelog_chardView"
        app:cardCornerRadius="4dp"
        android:clickable="true"
        android:layout_margin="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="?colorBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Version 1.2.0"
                android:id="@+id/changelog_title"
                android:textColor="?colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="teas dn asdfnk sdnfajk sdnkfn aksdfn aksdnf kasdn fasdkfn jkasdnf aksdnf "
                android:id="@+id/changelog_content"
                android:layout_below="@+id/changelog_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="7dp"
                android:textColor="?colorSecondFont" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
